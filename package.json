{
  "name": "pretty-error",
  "version": "4.0.0",
  "description": "See nodejs errors with less clutter",
  "main": "./lib/PrettyError.js",
  "typings": "index.d.ts",
  "scripts": {
    "test": "mocha \"test/**/*.ts\"",
    "test:watch": "mocha \"test/**/*.ts\" --watch",
    "compile": "tsc",
    "compile:coffee": "coffee --no-header --bare --compile --output ./lib ./src",
    "compile:watch": "tsc -w",
    "watch": "npm run compile:watch & npm run test:watch",
    "winwatch": "start/b npm run compile:watch & npm run test:watch",
    "prepublish": "npm run compile"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "renderkid": "^3.0.0"
  },
  "devDependencies": {
    "chai": "^4.3.7",
    "coffeescript": "^1.12.7",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.13.0"
  },
  "author": "Aria Minaei",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AriaMinaei/pretty-error.git"
  },
  "bugs": {
    "url": "https://github.com/AriaMinaei/pretty-error/issues"
  },
  "keywords": [
    "pretty",
    "error",
    "exception",
    "debug",
    "error-handling",
    "readable",
    "colorful",
    "prettify",
    "format",
    "human"
  ]
}
